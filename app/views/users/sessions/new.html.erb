<div class="container mt-4">
  <div class="text-center">

    <%= form_for(resource, as: resource_name, url: session_path(resource_name),html: { class: "form-signin_up" }) do |f| %>
      <h2 class="h3 mb-3 font-weight-normal">Log in</h2>
      <%= render "users/shared/error_messages", resource: resource %>

      <div class="field">
        <%= f.label :email,{class: 'sr-only'} %><br />
        <%= f.email_field :email, autofocus: true, :placeholder => "email",autocomplete: "email",class: "form-control" %>
      </div>

      <div class="field">
        <%= f.label :password,{class: 'sr-only'} %><br />
        <%= f.password_field :password,:placeholder => "password", autocomplete: "current-password",class: "form-control" %>
      </div>


      <div class="actions d-flex justify-content-around">
        <button class="btn btn-lg btn-primary submit_button" type="submit">Log in</button>
        <%= link_to 'Guest Login', users_guest_sign_in_path, method: :post, class: "btn btn-lg btn-dark submit_button" %>
      </div>
    
    <% end %>

    <div class="form-signin_up">
    </div>
    <%= render "users/shared/links" %>
  </div>
</div>